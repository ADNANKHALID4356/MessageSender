# ===========================================
# .env.prod.example — Production secrets template
#
# Copy to .env.prod (NEVER commit .env.prod to git)
# Used by docker-compose.prod.yml
# ===========================================

# ─── PostgreSQL ────────────────────────────────────────────
# Strong random password: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_strong_postgres_password

# ─── Redis ─────────────────────────────────────────────────
# Strong random password: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_strong_redis_password

# ─── JWT ───────────────────────────────────────────────────
# Generate: openssl rand -hex 64
JWT_SECRET=CHANGE_ME_64_hex_chars_minimum_32_bytes
JWT_EXPIRES_IN=15m
# Generate: openssl rand -hex 64  (must differ from JWT_SECRET)
JWT_REFRESH_SECRET=CHANGE_ME_different_64_hex_chars
JWT_REFRESH_EXPIRES_IN=7d

# ─── Encryption (AES-256) ──────────────────────────────────
# Generate: openssl rand -hex 32   → produces exactly 64 hex chars
ENCRYPTION_KEY=CHANGE_ME_exactly_64_hex_characters_00000000000000000000000000000000

# ─── URLs ──────────────────────────────────────────────────
# Production domain of your frontend (no trailing slash)
FRONTEND_URL=https://app.yourdomain.com

# These are baked into the frontend bundle at build time
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api/v1
NEXT_PUBLIC_SOCKET_URL=https://api.yourdomain.com

# ─── Facebook API ──────────────────────────────────────────
FACEBOOK_APP_ID=your_production_facebook_app_id
FACEBOOK_APP_SECRET=your_production_facebook_app_secret
# Random token you set in the Facebook Developer Console
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
FACEBOOK_API_VERSION=v18.0

# Frontend Facebook App IDs
NEXT_PUBLIC_FACEBOOK_APP_ID=your_production_facebook_app_id
NEXT_PUBLIC_FACEBOOK_AUTH_APP_ID=

# ─── Email (SMTP) ──────────────────────────────────────────
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# ─── Rate Limiting ─────────────────────────────────────────
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ─── Monitoring (Sentry — optional but recommended) ────────
# SENTRY_DSN=https://xxx@yyy.ingest.sentry.io/zzz
